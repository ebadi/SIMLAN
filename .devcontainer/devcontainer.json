{
    "name": "SMILE_IV (Extending docker-compose)",
    "dockerComposeFile": "../docker-compose.yaml",
    "service": "smile_simulation", // or smile_simulation_nvidia to use the computers nvidea GPUs
    "remoteUser": "ros",
    "workspaceFolder": "/home/ros/src",
    "customizations": {
        "vscode": {
            "extensions": [
                "dotjoshjohnson.xml",
                "ms-azuretools.vscode-docker",
                "ms-iot.vscode-ros",
                "ms-python.python",
                "ms-vscode.cpptools",
                "redhat.vscode-yaml",
                "smilerobotics.urdf",
                "streetsidesoftware.code-spell-checker",
                "twxs.cmake",
                "yzhang.markdown-all-in-one",
                "eamodio.gitlens",
                "njpwerner.autodocstring",
                "mhutchie.git-graph"
            ]
        }
    }
}
